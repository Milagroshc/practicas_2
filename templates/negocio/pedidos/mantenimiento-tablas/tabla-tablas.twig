{% endblock %}
{% block contenidoCuerpo %}

	<div class="row">
		<div
			class="col-12">

			<!-- Column -->
			<div class="card">
				<div class="card-body">
					
					<div class="row">
					<div class="col-sm-8">
					
					<h4 class="card-title">Agregar & Eliminar Filas </h4>
					<h6 class="card-subtitle">Debe seleccionar al menos un catalogo para editar registros</h6>
					</div>
					<div class="col-sm-4">
					<div class="form-group row">
										<div class="col-sm-12">
											
											<select id="catalogotablas" name="catalogotablas" data-placeholder="Seleccione el catalogo de tablas" class="form-control select2 input-estado" style="width:100%;">
												{% for catalogotabla in catalogotablas %}
													{% if IDCATALOGOTABLAS == catalogotabla.IDCATALOGOTABLAS  %}
													<option value="{{ catalogotabla.IDCATALOGOTABLAS }}" selected>{{ catalogotabla.NOMBRE }}</option>
													{% else %}
													<option value="{{ catalogotabla.IDCATALOGOTABLAS }}">{{ catalogotabla.NOMBRE }}</option>
													{% endif %}
												{% endfor %}
											</select>
										</div>
									</div>
					</div>
				</div>


					<div class="table-responsive">
						<table id="footable-addrow" class="table" data-paging="true" data-filtering="true" data-sorting="true" data-editing="true" data-state="true">
							<thead>
								<tr>
									<th data-visible="false"></th>
									<th data-visible="false"></th>
									<th></th>
									<th></th>
									<th></th>
									<th id="estado" data-formatter="estado"  data-type="HTMLElement"></th>
									<th data-breakpoints="all" ></th>
									<th data-breakpoints="all" ></th>
									<th data-breakpoints="all" ></th>
									<th data-breakpoints="all" ></th>
									<th data-breakpoints="all" ></th>
									<th data-breakpoints="all" ></th>
									<th data-breakpoints="all" ></th>
									<th></th>
									<th></th>
									<th></th>
									<th data-formatter="accion" data-type="HTMLElement"></th>
								</tr>
							</thead>
						</table>
					</div>
					<!-- Start Popup Model -->
					<div class="modal fade" id="editor-modal" tabindex="-1" role="dialog" aria-labelledby="editor-title">
						<div class="modal-dialog" role="document">
							<form class="modal-content form-horizontal" id="editor">
								<div class="modal-header">
									<h4 class="modal-title" id="editor-title">Agregar Fila</h4>
									<button type="button" class="close" data-dismiss="modal" aria-label="Close">
										<span aria-hidden="true">×</span>
									</button>
								</div>
								<div class="modal-body">
								<!-- valores ocultos -->
								<input type="hidden" class="form-control" id="IDCATALOGOTABLAS" name="IDCATALOGOTABLAS">
								
								<div class="form-group required row">
										<label for="CODIGO" class="col-sm-3 control-label">
											Código</label>
										<div class="col-sm-9">
											<input type="text" class="form-control" id="CODIGO" name="CODIGO" placeholder="Código" required>
										</div>
									</div>
								<div class="form-group required row">
										<label for="NOMBRE" class="col-sm-3 control-label">
											Nombre</label>
										<div class="col-sm-9">
											<input type="text" class="form-control" id="NOMBRE" name="NOMBRE" placeholder="Nombre" required>
										</div>
									</div>

									<div class="form-group required row">
										<label for="DESCRIPCION" class="col-sm-3 control-label">
											Descripción</label>
										<div class="col-sm-9">
											<input type="text" class="form-control" id="DESCRIPCION" name="DESCRIPCION" placeholder="Descripción" required>
										</div>
									</div>

									<div class="form-group row">
										<label for="ESTADO" class="col-sm-3 control-label">Estado</label>
										<div
											class="col-sm-9">
										
											<select id="ESTADO" name="ESTADO" data-placeholder="Seleccione estado" class="form-control select2modal input-estado" style="width:100%;">
												{% for estado in estados["data"]["tabtablas"] %}
													<option value="{{ estado.IDTABLA }}">{{ estado.NOMBRE }}</option>
												{% endfor %}
											</select>
										</div>
									</div>

									<div class="form-group required row">
										<label for="VALDAT_TIPO" class="col-sm-3 control-label">Tipo de Dato
										</label>
										<div class="col-sm-9">
											<select id="VALDAT_TIPO" name="VALDAT_TIPO" data-placeholder="Seleccione tipo de dato" class="form-control select2modal input-estado" style="width:100%;">
													<option value=""> Ninguno</option>
													<option value="N"> Numérico</option>
													<option value="AN"> Alfa Numérico</option>
											</select>
										</div>
									</div>

									<div class="form-group required row">
										<label for="VALDAT_LON_MIN" class="col-sm-3 control-label">Longitud mínima
										</label>
										<div class="col-sm-9">
											<input type="number" class="form-control" id="VALDAT_LON_MIN" name="VALDAT_LON_MIN" placeholder="Mínimo">
										</div>
									</div>

									<div class="form-group required row">
										<label for="VALDAT_LON_MAX" class="col-sm-3 control-label">Longitud máxima
										</label>
										<div class="col-sm-9">
											<input type="number" class="form-control" id="VALDAT_LON_MAX" name="VALDAT_LON_MAX" placeholder="Máximo">
										</div>
									</div>
									
								</div>
								<div class="modal-footer">
									<button type="submit" class="btn btn-primary">Guardar Cambios</button>
									<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
								</div>
							</form>
						</div>
					</div>
					<!-- End Popup Model -->
				</div>
			</div>

		</div>
	</div>

{% endblock %}

