        <article>
          <div class="category-products">


            {% for row in noticias["data"]|batch(3) %}
              <ul class="row products-grid">
                  {% for noticia in row %}
                      <li class="item col-lg-4 col-md-3 col-sm-4 col-xs-6">
                                   <div class="item-inner">
                              <div class="item-img">
                                <div class="item-img-info"><a href="{{base_url()}}/noticias/{{noticia.url}}" title="{{noticia.titulo}} " class="product-image"><img src="{{noticia.urlPortada}}" alt="{{noticia.titulo}}"></a>
                                
                                  <div class="item-box-hover">
                                    
                                  </div>
                                </div>
                                <div class="add_cart">
                                        <a class="button btn-cart" href="{{base_url()}}/noticias/{{noticia.url}}"><span>Ver noticia</span></a>
                                      </div>
                              </div>
                              <div class="item-info">
                                <div class="info-inner">
                                  <div class="item-title"><a href="{{base_url()}}/noticias/{{noticia.url}}" title="{{noticia.titulo}} ">{{noticia.titulo}} </a> </div>
                                  <div class="item-content">
                                    <p class="rating-links">{{noticia.resumen|convert_encoding('ISO-8859-1', 'ISO-8859-1')|raw}}</p>
                                    <div class="item-price">
                                      <div class="price-box"><span class="regular-price"><span class="price">{{noticia.fecha_registro}}</span> </span> </div>
                                    </div>
									
                                  </div>
                                </div>
                              </div>
                            </div>
                      
              </li>
                  {% endfor %}
              </ul>
          {% endfor %}
          </div>
          </article>
        </div>
