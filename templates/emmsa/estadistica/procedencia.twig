{% block seccionContenido %}
<div class="col-md-12 col-sm-12 m-b-50 product-detail">
<section class="page-section bgc-light">
          <div class="container">
            <div class="row group-contact-left-header">
              <div class="col-md-12 col-xs-12">

                <form id="form_procedencia">
                  <div class="row">
                  <div class="col-md-6">
                                  <header class="hr-header">
                  <h2 class="smb"> CONSULTA DE PROCEDENCIAS </h2>
                  <p class="common-serif __caption">Usted podrá consultar la variación de los precios de todos nuestros productos diariamente.</p>
                  <div class="separator-2-color"></div>
                </header>
                  </div>
                    <div class="form-group col-md-3">
										<label for="indicador">Seleccione el año</label>
										<select class="form-control simple" id="anio" name="anio">
											{% for anio in anios.data %}
												<option value="{{anio.annio}}">{{anio.annio}}</option>
											{% endfor %}
										</select>
									</div>
                    <div class="col-md-3 form-group text-center-md-max">
                    	<label for="indicador">&nbsp;</label><br/>
                      <button type="button" class="btn btn-size-1 btn-primary" id="graficarProcedencia">Ver reporte</button>
                    </div>
                  </div>
                </form>
              </div>
              <div class="col-md-12 col-xs-12">
              <div id="container" style="min-width: 310px; max-width: 1000px; height: 800px; max-height: 1000px; margin: 0 auto"></div>
              <div class="reporte-tabla">

                <table id="example" class="table-primary">
        <thead>
