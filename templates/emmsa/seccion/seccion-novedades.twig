{% block seccionNovedades %}

<div class="latest-blog wow bounceInUp animated animated container">
                <!--exclude For version 6 -->
                <div class="new_title">
                    <img src="{{base_url()}}/emmsa/images\icon8.png" alt="icon">
                    <h2>ÃšLTIMAS NOTICIAS</h2>
                </div>
                <!--For version 1,2,3,4,5,6,8 -->
                <div class="row">
                {% for ultimaNoticia in ultimasNoticias.data %}
                    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4 blog-post">
                        <div class="blog_inner">
                            <div class="blog-img">
                                <a href="{{base_url()}}/noticias/{{ultimaNoticia["url"]}}"> <img src="{{base_url()}}{{ultimaNoticia["icono"]}}" alt="blog image"> </a>
                                <div class="mask"></div>
                            </div>
                            <!--blog-img-->
                            <div class="blog-info">
                                <div class="post-date">
                                    <time class="entry-date" datetime="2015-05-11T11:07:27+00:00">{{ ultimaNoticia["fecha_registro"]|date("d") }}<span> {{ ultimaNoticia["fecha_registro"]|date("F", "America/Lima")|replace({
  'January'  : 'ENE',
  'February'  : 'FEB',
  'March'  : 'MAR',
  'April'  : 'ABR',
  'May'  : 'MAY',
  'June'  : 'JUN',
  'July'  : 'JUL',
  'August'  : 'AGO',
  'September'  : 'SET',
  'October'  : 'OCT',
  'November'  : 'NOV',
  'December' : 'DIC',
})}} </span></time>
                                </div>
                                <ul class="post-meta">
                                    <li><i class="fa fa-user"></i>Publicado por <a href="#">EMMSA</a> </li>
                                    <li><i class="fa fa-calendar"></i><a href="#"> {{ ultimaNoticia["fecha_registro"]|date("m/d/Y") }}  </a> </li>
                                </ul>
                                <h3><a href="{{base_url()}}/noticias/{{ultimaNoticia["url"]}}">{{ultimaNoticia["titulo"]}}</a></h3>
                                <p>{{ultimaNoticia.resumen|convert_encoding('UTF-8', 'UTF-8')|raw}}</p>
                                <a class="info" href="{{base_url()}}/noticias/{{ultimaNoticia["url"]}}">Leer mas</a>
                            </div>
                        </div>
                        <!--blog_inner-->
                    </div>
                {% endfor %}
                </div>
                <!--END For version 1,2,3,4,5,6,8 -->
                <!--exclude For version 6 -->
                <!--container-->
            </div>



{% endblock %}

